# Environment Variables
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitcoach_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_67890
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_web
GOOGLE_CLIENT_ID_IOS=your_google_client_id_ios
GOOGLE_CLIENT_ID_ANDROID=your_google_client_id_android

# Google Play Developer API (Service Account for Server-Side Verification)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email@project-id.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Apple OAuth (Get from Apple Developer)
APPLE_CLIENT_ID=your_apple_service_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./config/apple_private_key.p8

# AI Provider (default: gemini)
#
# Supported today:
#   gemini
AI_PROVIDER=gemini

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Optional model selection:
# - AI_MODEL: primary model id (no "models/" prefix)
# - AI_MODEL_FALLBACKS: comma-separated fallbacks used if AI_MODEL isn't usable
AI_MODEL=gemini-2.5-flash
AI_MODEL_FALLBACKS=gemini-2.5-flash,gemini-2.0-flash,gemini-2.0-flash-lite

# USDA Food Data API
USDA_API_KEY=your_usda_api_key_here

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
